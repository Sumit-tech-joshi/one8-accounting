{
  "compilerOptions": {
    /* Language & Runtime */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "Node",

    /* Paths */
    "rootDir": "src",
    "outDir": "dist",

    /* Type Safety */
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Performance */
    "skipLibCheck": true,

    /* Source Maps (useful for debugging on Render/Railway) */
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}